<div class="page-single movie-single movie_single">
    <div class="container">
        <div class="row ipad-width2">
            <div class="col-md-4 col-sm-12 col-xs-12">
                <div class="movie-img sticky-sb">
                    <img src="@Html.DisplayFor(model => Model.pelicula.PosterPath)" alt="">
                    <div class="movie-btn">
                        <div class="btn-transform transform-vertical red">


                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="col-md-8 col-sm-12 col-xs-12">
                <div class="movie-single-ct main-content">
                    <h1 class="bd-hd">Que disfrutes tu pelicula</h1>
                    
                    <div class="movie-rate">
                        <div class="rate">
                            <i class="ion-android-star"></i>
                            <p>
                                <span>Debes presentar este ticket en caja y realizar tu pago. </span>

                            </p>
                        </div>

                    </div>
                    <div class="movie-tabs">
                        <div class="tabs">
                            <ul class="tab-links tabs-mv">
                                <li class="active"><a href="#overview">Ticket No. @Html.DisplayFor(model=>Model.id_ticket)</a></li>

                            </ul>



                            <div class="tab-content">
                                <div id="overview" class="tab active">
                                    <div class="row">
                                        <div class="col-md-8 col-sm-12 col-xs-12">
                                            <span>Horario: </span>
                                            <p>@Html.DisplayFor(Model => Model.funcion.horario)</p>
                                            <span>Fecha de Compra: </span>
                                            <p>@Html.DisplayFor(Model => Model.fecha_compra)</p>
                                            <span>Pelicula: </span>
                                            <p>@Html.DisplayFor(Model => Model.pelicula.Title)</p>
                                            <span>Sala </span>
                                            <p>@Html.DisplayFor(Model => Model.funcion.sala.nombre_sala)</p>

                                        </div>

                                    </div>


                                    <div class="title-hd-sm">
                                        <h4>Asientos Reservados:</h4>
                                    </div>


                                    <span>*</span>
                                    @foreach (Test2.Models.ticket_asiento item in Model.ticket_asiento)
                                    {

                                        @Html.DisplayFor(model => item.id_asiento);
                                        <span>*</span>

                                    }


                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
